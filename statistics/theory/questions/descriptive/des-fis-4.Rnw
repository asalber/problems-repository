## DATA GENERATION
require(xtable)
classes <- c("(30,35]", "(35,40]", "(40,45]", "(45,50]")
xi <- c(32.5, 37.5, 42.5, 47.5)
ni <- c(15, 35, 40, 10)
x <- rep(xi,ni)
data <- data.frame(classes, ni)
colnames(data) <- c("\\mbox{Time (min)}", "\\mbox{Num runners}")
## QUESTION/ANSWER GENERATION
# sample size
nx <- length(x)
# quartiles
q1 <- 36.4286
q3 <- 43.125
# interquartile range
iqr <- q3-q1
#fences
f1 <- q1-1.5*iqr
f2 <- q3+1.5*iqr
# outliers
outliers <- x[x < f1 | x > f2]
# means
mx <- mean(x)
my <- 40
# variances
s2x <- sum(x^2)/nx-mx^2
# standard deviation
sx <- sqrt(s2x)
sy <- 5
# coef. variation
cvx <- sx/mx
cvy <- sy/my
# coef. skewness
g1x <- sum((x-mx)^3)/(nx*sx^3)
g1y <- 0.75
# standard scores
zx <- (39-mx)/sx
zy <- (39-my)/sy
@

\begin{question}
\puntos{5}The table below summarize the time that took to the runners to reach the finish in a long-distance race in Madrid: 

$$
